{
  extends: [
    "config:base",
  ],
  packageRules: [
    {
      matchPackageNames: ["golang/go"],
      matchManagers: ["regex"],
      extractVersion: "^go(?<version>.*)$",
    },
  ],
  regexManagers: [
    {
      fileMatch: ["go-version"],
      matchStrings: [
        "(?<currentValue>.*)",
      ],
      depNameTemplate: "golang/go",
      datasourceTemplate: "github-releases",
    },
  ]
}
