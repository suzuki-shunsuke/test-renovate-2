{
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["\\.?aqua\\.ya?ml"],
      "matchStrings": [
        "^ +(version|ref): (?<currentValue>([^'\"]|\\S)*) +# renovate: depName=(?<depName>.*)",
        "^ +(version|ref): \"(?<currentValue>([^'\"]|\\S)*)\" +# renovate: depName=(?<depName>.*)",
        "^ +(version|ref): '(?<currentValue>([^'\"]|\\S)*)' +# renovate: depName=(?<depName>.*)",
        "name: (?<depName>[^'\"]*)@(?<currentValue>([^'\"]|\\S)*)",
        "name: \"(?<depName>[^']*)@(?<currentValue>([^'\"]|\\S)*)\"",
        "name: '(?<depName>[^\"]*)@(?<currentValue>([^'\"]|\\S)*)'"
      ],
      "datasourceTemplate": "github-releases"
    }
  ]
}
