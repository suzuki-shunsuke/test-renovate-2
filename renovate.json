{
  "labels": [
    "renovate:{{depName}}",
    "renovate:{{depName}}/{{newVersion}}"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin"],
      "schedule": [
        "at 2:00 am on Mon, Thurs"
      ]
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [".akoi.yml"],
      "matchStrings": ["version: (?<currentValue>.*?)  # renovate: depName=(?<depName>.*?)\\n"],
      "datasourceTemplate": "github-releases"
    }
  ]
}
